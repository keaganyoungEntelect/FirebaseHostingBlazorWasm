<!-- SaveDialog.razor -->
<div class="modal" style="display: @displayStyle;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Funko Saved to Collection</h5>
                <button type="button" class="close" @onclick="CloseDialog">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>The selected Funko has been added to your collection.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="CloseDialog">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    private string displayStyle = "none";

    private void CloseDialog()
    {
        displayStyle = "none";
    }

    public void ShowDialog()
    {
        displayStyle = "block";
    }
}
