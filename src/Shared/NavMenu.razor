@inject IGlobalVariables GlobalVariables

<div class="top-row ps-3 navbar navbar-dark" style="background-color: #333; display: flex; align-items: center;">
    <div class="container-fluid">
        <a class="mx-auto">
            <img src="https://i.postimg.cc/5tqF5Y1p/funko.png" alt="funko" style="max-width: 60%; height: auto; display: block; margin: auto;" />
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>


<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu" style="background-color: #555; color: white;">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="() => ColorHome()" style="color: white;">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ListFunkoVinyls" @onclick="() => ColorFunkos()" style="color: white;">
                <span class="oi oi-list" aria-hidden="true"></span> Funkos
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ListFunkoCollection" @onclick="() => ColorCollection()" style="color: white;">
                <span class="oi oi-bookmark" aria-hidden="true"></span> Collection
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ListFunkoWishlist" @onclick="() => ColorWishlist()" style="color: white;">
                <span class="oi oi-heart" aria-hidden="true" onclick="ColorWishlist"></span> Wishlist
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="AddFunko" @onclick="() => ColorAddFunkos()" style="color: white;">
                <span class="oi oi-plus" aria-hidden="true"></span> Add Funkos
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ColorCollection()
    {
        GlobalVariables.MyColorVariable = "rgba(205,242,255,255)";
    }
    private void ColorWishlist()
    {
        GlobalVariables.MyColorVariable = "rgba(106,66,71,255)";
    }
    private void ColorFunkos()
    {
        GlobalVariables.MyColorVariable = "rgba(136,191,245,255)";
    }
    private void ColorAddFunkos()
    {
        GlobalVariables.MyColorVariable = "rgba(134, 176, 192, 1)";
    }
    private void ColorHome()
    {
        GlobalVariables.MyColorVariable = "rgba(185, 208, 240, 1)";
    }
}
